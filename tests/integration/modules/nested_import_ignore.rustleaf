// Test nested imports (module importing another module)

use geometry;

// Test accessing items from geometry module
var origin = geometry.ORIGIN;
assert_eq(origin.x, 0.0);
assert_eq(origin.y, 0.0);

// Test function that uses imported items internally
var area = geometry.circle_area(2.0);
// Should be PI * 4 â‰ˆ 12.56636
assert(area > 12.5 and area < 12.6);

// Create and test Point
var p1 = geometry.Point.new(3.0, 4.0);
var p2 = geometry.Point.new(0.0, 0.0);
var distance = p1.distance_to(p2);
assert_eq(distance, 5.0); // 3-4-5 triangle

print("Nested import tests passed");