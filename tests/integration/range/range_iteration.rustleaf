// Test range iteration in for loops

// Forward iteration
var sum = 0;
for i in range(1, 4) {
    sum = sum + i;
}
assert(sum == 6);  // 1 + 2 + 3

// Backward iteration
var product = 1;
for i in range(5, 2, -1) {
    product = product * i;
}
assert(product == 60);  // 5 * 4 * 3

// Empty range iteration
var count = 0;
for i in range(5, 5) {
    count = count + 1;
}
assert(count == 0);

// Step iteration
var evens = 0;
for i in range(0, 10, 2) {
    evens = evens + 1;
}
assert(evens == 5);  // 0, 2, 4, 6, 8