// Test range edge cases

// Empty ranges
assert(range(0).len() == 0);
assert(range(5, 5).len() == 0);
assert(range(5, 2).len() == 0);
assert(range(2, 5, -1).len() == 0);

// Single element ranges
assert(range(1).len() == 1);
assert(range(3, 4).len() == 1);
assert(range(10, 9, -1).len() == 1);

// Large ranges are memory efficient
var large = range(0, 1000000);
assert(large.len() == 1000000);
assert(type(large) == "range");