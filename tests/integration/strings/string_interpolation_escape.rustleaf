// Test escape sequences in strings with interpolation
var value = 42;

// Test basic interpolation with text
var simple = "Value is ${value}";
assert(simple == "Value is 42");

// Test escape sequences work correctly in interpolated strings
var newline = "Line 1\nLine 2: ${value}";
assert(newline == "Line 1\nLine 2: 42");

var tab_test = "Before\tAfter: ${value}";
assert(tab_test == "Before\tAfter: 42");

var quote_test = "Say \"Hello\" to ${value}";
assert(quote_test == "Say \"Hello\" to 42");

// Test backslash in interpolated strings
var backslash_test = "Path: C:\\Users\\${value}";
assert(backslash_test == "Path: C:\\Users\\42");