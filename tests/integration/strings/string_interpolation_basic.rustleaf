// Basic string interpolation tests
var name = "World";
var greeting = "Hello, ${name}!";
assert(greeting == "Hello, World!");

// Test with different types
var age = 25;
var message = "I am ${age} years old";
assert(message == "I am 25 years old");

var pi = 3.14159;
var math_msg = "Pi is approximately ${pi}";
assert(math_msg == "Pi is approximately 3.14159");

var flag = true;
var bool_msg = "The flag is ${flag}";
assert(bool_msg == "The flag is true");

// Test with null
var empty = null;
var null_msg = "Value is ${empty}";
assert(null_msg == "Value is null");