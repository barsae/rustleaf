// Test that classes are accessible as objects in global scope

// Test direct class access
print(String)
print(List) 
print(Dict)

// Test accessing methods from class objects
var len_method = String.len
print(len_method)
print(type(len_method))

// Test that the method works when called
assert(len_method("hello") == 5)

// Test that normal method calls still work
assert("world".len() == 5)

// Test that method binding works correctly
var s = "testing"
var bound_len = s.len
assert(bound_len() == 7)

print("All class access tests passed!")