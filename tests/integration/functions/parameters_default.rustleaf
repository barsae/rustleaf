// Test function with default parameters
fn greet(name, greeting = "Hello") {
    greeting + ", " + name + "!"
}

// Call with default
var result1 = greet("Alice");
assert(result1 == "Hello, Alice!");

// Call with custom greeting
var result2 = greet("Bob", "Hi");
assert(result2 == "Hi, Bob!");

// Test multiple defaults
fn connect(host, port = 80, secure = false) {
    if secure {
        "https://" + host + ":" + port
    } else {
        "http://" + host + ":" + port
    }
}

var url1 = connect("example.com");
assert(url1 == "http://example.com:80");

var url2 = connect("example.com", 443, true);
assert(url2 == "https://example.com:443");