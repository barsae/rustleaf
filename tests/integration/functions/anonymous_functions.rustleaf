// Test basic closure with new syntax
var double = |x| x * 2;
var result1 = double(7);
assert(result1 == 14);

// Test closure with multiple parameters
var add = |a, b| a + b;
var result3 = add(10, 20);
assert(result3 == 30);

// Test empty parameter closure
var get_answer = || 42;
var result6 = get_answer();
assert(result6 == 42);

// Test closure with block body
var greet = |name| {
    "Hello, " + name + "!"
};
var result2 = greet("Alice");
assert(result2 == "Hello, Alice!");

// Test returning closures
fn make_multiplier(factor) {
    |x| x * factor
}
var triple = make_multiplier(3);
var result5 = triple(10);
assert(result5 == 30);