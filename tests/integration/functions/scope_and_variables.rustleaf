// Test local variables and scope
fn test_scope() {
    var local_var = "local";
    local_var + " value"
}

var result1 = test_scope();
assert(result1 == "local value");

// Test parameter shadowing
var global_x = "global";

fn shadow_test(global_x) {
    var global_x = "parameter shadowed by local";
    global_x
}

var result2 = shadow_test("parameter");
assert(result2 == "parameter shadowed by local");
assert(global_x == "global");

// Test nested scope access
fn outer_scope() {
    var outer_var = "outer";
    
    fn inner_scope() {
        var inner_var = "inner";
        outer_var + " " + inner_var
    }
    
    inner_scope()
}

var result3 = outer_scope();
assert(result3 == "outer inner");